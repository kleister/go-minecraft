# http://editorconfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.star]
indent_style = space
indent_size = 2

[*.{html,tmpl}]
indent_style = tab
indent_size = 4

[*.{js,vue}]
indent_style = space
indent_size = 2

[*.{yml,toml,json}]
indent_style = space
indent_size = 2

[*.{css,less,scss}]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.py]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = true
